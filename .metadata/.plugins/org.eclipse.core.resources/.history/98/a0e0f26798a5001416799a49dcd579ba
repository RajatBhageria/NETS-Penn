import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

/**
 * 
 */

/**
 * @author RajatBhageria
 *
 */
public class Main {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		AdjacencyMatrix matrix = new AdjacencyMatrix(4038);
		int i = 0;
		int j = 0;
		
		String file= "src/facebook_combined.txt";
		try {
		    BufferedReader in = new BufferedReader(new FileReader(file));
		    String str;
		    while ((str = in.readLine()) != null){
		    	System.out.println(str);
		    	int spaceIndex = str.indexOf(" ");
		    	i = Integer.parseInt((str.substring(0, spaceIndex+1)));
		    	j = Integer.parseInt((str.substring(spaceIndex, str.length())));
		    	matrix.addEdge(i, j);
		    }
		    in.close();
		} 
		
		catch (IOException e) {
			System.out.println("ERROR: unable to read file " + file);
		    e.printStackTrace(); 
		}

		

	}

}
